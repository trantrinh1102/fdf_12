<div class="block-shop-header clearfix">
  <div class="shop-cover">
    <h2 class="section_title">
      <%= @shop.name %>
      <%= link_to t(".edit"), edit_dashboard_shop_path(@shop),
        class: "btn btn-success pull-right" %>
    </h2>
    <%= image_tag @shop.cover_image.url %>
    <div class="shop-info-wrapper col-md-12">
      <div class="shop-avatar-wrapper row">
        <div class="col-sm-3 col-xs-3 shop-avatar">
        <%= image_tag @shop.avatar.url %>
        </div>
      </div>
    </div>
    <div class="col-md-12 shop-nav-wrapper">
      <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
          <div class="row shop-basic-info">
            <h4 class="title">
              <%= @shop.name %>
              <%= render "shared/shop_status_label", shop: @shop %>
            </h4>
          </div>
        </div>
        <div class="col-sm-3">
          <ul class="nav shop-info">
            <li>
              <i class="fa fa-user"></i>
              <span><%= link_to @shop.owner_name, "#" %></span>
            </li>
            <li>
              <i class="fa fa-envelope"></i>
              <span><%= mail_to @shop.owner_email %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 description-wrapper">
    <div class="quote">
      <%= t @shop.description %>
    </div>
  </div>
</div>
<div class="row">
  <h2 class="section_title">
    <div class="btn_view_all_wrapper pull-right">
      <%= link_to t("common.create_button"),
        new_dashboard_shop_product_path(@shop),
        class: "btn btn_view_all btn-warning" %>
    </div>
    <% if @products.any? %>
      <%= t ".has_products" %>
    <% else %>
      <%= t ".no_product" %>
    <% end %>
  </h2>
  <div class="col-md-12">
    <%= render "products" if @products.any? %>
  </div>
</div>
