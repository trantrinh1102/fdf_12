<div class="panel-body">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t ".image" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".description" %></th>
        <th><%= t ".price" %></th>
        <th><%= t ".actions" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @products %>
    </tbody>
  </table>
  <%= paginate @products %>
</div>
