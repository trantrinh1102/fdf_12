<div class="scrollbar">

<div class="cart-item">
  <% @cart.items.each do |item| %>
    <li id="item-<%= item.product_id %>">
      <span class="item">
        <span class="item-left">
          <%= image_tag item.product.image.url %><br>
          <h6 class="media-heading">
            <%= item.product.name %>
          </h6>
        </span>
      </span>
      <div class="media">
        <div class="media-body">
          <span class="text-success">
            <%= t "products.status" %></span>
          <span class="text-success"></span>
        </div>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t "cart.quantity" %></th>
            <th class="text-center"><%= t "cart.price" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="col-sm-2 col-md-2">
              <%= item.quantity %>
            </td>
            <td class="col-sm-3 col-md-3 text-center">
              <%= item.total_price %> <%= t"cart.vnd" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <span class="item-right">
                <%= link_to t("cart.delete"), cart_path(item.product_id),
                  method: :delete, remote: true,
                  class: "btn btn-xs btn-danger pull-right" %>
              </span>
              <%= link_to t("cart.sub"), edit_cart_path(item.product),
                remote: true, class: "pull-right btn btn-xs btn-primary" %>
              <%= link_to t("cart.add"), cart_path(item.product), remote: true,
                method: :put, class: "pull-right btn btn-xs btn-primary" %>
            </td>
          </tr>
        </tbody>
      </table>
    </li>
  <% end %>
</div>
</div>
