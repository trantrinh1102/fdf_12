<div class="product_item_wrapper">
  <div class="product_content_area">
    <div class="image_product">
      <%= link_to product do %>
        <%= image_tag product.image.url, class: "img-responsive" %>
      <% end %>
      <% if product.check_time_btn_add_cart? %>
        <h3> <%= t "cart.order_time_text" %>
          <%= product.start_hour.strftime(Settings.time_format) + "-" +
            product.end_hour.strftime(Settings.time_format) %> </h3>
      <% end %>
    </div>
  </div>
  <div class="description_area row">
    <div class="col-md-2">
      <%= link_to product do %>
        <span class="shop-avatar">
          <%= image_tag product.shop_avatar.url %>
        </span>
      <% end %>
    </div>
    <div class="col-md-10">
      <div>
        <strong><%= link_to product.shop_name, product.shop %></strong>
      </div>
      <div class="product_text">
        <strong><%= product.name %></strong>
      </div>
      <div class="product_text">
        <%= number_to_currency product.price %>
      </div>
    </div>
  </div>
  <div class="interaction_area">
       <%= link_to cart_path(product.id), remote: true,
        method: :put, class: "btn btn_add_to_cart",
        disabled: product.check_time_btn_add_cart? do %>
          <span class="glyphicon glyphicon-shopping-cart"></span>
          <%= t "cart.add_to_card" %>
        <% end %>
    <%= link_to product, class: "btn btn-default btn_add_favorite" do %>
      <span class="glyphicon glyphicon-eye-open"></span>
      <%= t "common.view_button" %>
    <% end %>
  </div>
</div>
